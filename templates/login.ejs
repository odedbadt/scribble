<!DOCTYPE html>
<html>
  <head>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script src="https://apis.google.com/js/api.js"></script>
    
  </head>
  <body>

    <!-- <input type="hidden" name="client_id" value="983437923698-shfpf6udie0o0akgoa3caj7bdvonkhvo.apps.googleusercontent.com">
    <input type="hidden" name="client_id" value="983437923698-shfpf6udie0o0akgoa3caj7bdvonkhvo.apps.googleusercontent.com">     -->
    <form id="auth_form" method="GET" action="https://accounts.google.com/o/oauth2/v2/auth">
      <input type="hidden" name="client_id" value="<%=client_id%>">
      <input type="hidden" name="redirect_uri" value="http://localhost:8080/login">
      <input type="hidden" name="response_type" value="token">
      <input type="hidden" name="scope" value="<%=scopes%>">
      <input type="hidden" name="include_granted_scopes" value="true">
      <input type="hidden" name="state" value="<%=next_state%>">
    </form>
    <script>
      if (document.location.hash =='' && document.location.search =='') {
        document.getElementById('auth_form').submit()
      }
    </script>
  </body>
</html>

